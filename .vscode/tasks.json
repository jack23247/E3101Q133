{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/Zi",
                "/Fd:%BuildPath%\\vc140.pdb",
                "/Fo:%BuildPath%\\%TargetName%.obj",
                "/Fe:%BuildPath%\\%TargetName%.exe",
                "main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
    ],
    "options": {
        "env": {
            "BuildPath": ".\\build\\win32",
            "TargetName": "solid-fiesta"
        }
    }
}